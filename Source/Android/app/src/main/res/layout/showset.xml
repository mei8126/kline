            </RelativeLayout>
            <TextView android:background="@color/transparent" android:layout_width="fill_parent" android:layout_height="@dimen/divider" />
            <ListView android:id="@id/kstyle_listview" android:visibility="gone" android:scrollbars="none" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:divider="@color/transparent" android:dividerHeight="@dimen/divider" />
            <RelativeLayout android:id="@id/maparam" android:background="@drawable/itemclick3" android:layout_width="fill_parent" android:layout_height="@dimen/margin45">
                <TextView android:textColor="@color/bar_color" android:id="@id/maparam_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/margin10" android:text="@string/maparam" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                <Button android:id="@id/maparam_btn" android:background="@drawable/right_press" android:layout_width="@dimen/margin25" android:layout_height="@dimen/margin25" android:layout_marginRight="@dimen/margin10" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
            </RelativeLayout>
            <TextView android:background="@color/transparent" android:layout_width="fill_parent" android:layout_height="@dimen/divider" />
            <ListView android:id="@id/maparam_listview" android:visibility="gone" android:scrollbars="none" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:divider="@color/transparent" android:dividerHeight="@dimen/divider" />
            <RelativeLayout android:id="@id/defaultindex" android:background="@drawable/itemclick3" android:layout_width="fill_parent" android:layout_height="@dimen/margin45">
                <TextView android:textColor="@color/bar_color" android:id="@id/defaultindex_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/margin10" android:text="@string/defaultindex" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                <Button android:id="@id/defaultindex_btn" android:background="@drawable/right_press" android:layout_width="@dimen/margin25" android:layout_height="@dimen/margin25" android:layout_marginRight="@dimen/margin10" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
            </RelativeLayout>
            <TextView android:id="@id/divider" android:background="@color/transparent" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/divider" />
            <ListView android:id="@id/defaultindex_listview" android:visibility="gone" android:scrollbars="none" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:divider="@color/transparent" android:dividerHeight="@dimen/divider" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.kline"
    android:id="@id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whites"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/bar_color"
        android:orientation="horizontal">

        <Button
            android:id="@id/back"
            android:layout_width="@dimen/margin25"
            android:layout_height="@dimen/margin25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_click" />

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="建议审核"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin30"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/loginname"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.5"
                    android:gravity="center"
                    android:text="用户账号："
                    android:textColor="@color/bar_color" />

                <TextView
                    android:id="@id/loginname_value"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.0"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin30"
                android:layout_marginBottom="@dimen/margin10"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/nickname"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.5"
                    android:gravity="center"
                    android:text="用户昵称："
                    android:textColor="@color/bar_color" />

                <TextView
                    android:id="@id/nickname_value"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.0"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin30"
                android:layout_marginBottom="@dimen/margin10"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/time"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.5"
                    android:gravity="center"
                    android:text="发布时间："
                    android:textColor="@color/bar_color" />

                <TextView
                    android:id="@id/time_value"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.0"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin30"
                android:layout_marginBottom="@dimen/margin10"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/contact"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.5"
                    android:gravity="center"
                    android:text="联系方式："
                    android:textColor="@color/bar_color" />

                <TextView
                    android:id="@id/contact_value"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.0"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10">

                <TextView
                    android:id="@id/suggest"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.5"
                    android:gravity="center"
                    android:text="建议内容："
                    android:textColor="@color/bar_color" />

                <TextView
                    android:id="@id/suggest_value"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.0"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <EditText
                android:id="@id/reply"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin60"
                android:layout_marginLeft="@dimen/margin20"
                android:layout_marginRight="@dimen/margin20"
                android:layout_marginTop="@dimen/margin10"
                android:background="@drawable/editshape"
                android:focusableInTouchMode="true"
                android:gravity="top"
                android:hint="回复"
                android:maxLength="400"
                android:padding="@dimen/margin5" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin20"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:gravity="center">

                    <com.demo.view.SmoothCheckBox
                        android:id="@id/unpublish_check"
                        android:layout_width="@dimen/margin25"
                        android:layout_height="@dimen/margin25"
                        android:layout_margin="@dimen/margin10"
                        android:checked="false"
                        app:color_checked="@color/ptr" />

                    <TextView
                        android:id="@id/unpublish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="不公开"
                        android:textColor="@color/bar_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:gravity="center">

                    <com.demo.view.SmoothCheckBox
                        android:id="@id/publish_check"
                        android:layout_width="@dimen/margin25"
                        android:layout_height="@dimen/margin25"
                        android:layout_margin="@dimen/margin10"
                        android:checked="false"
                        app:color_checked="@color/ptr" />

                    <TextView
                        android:id="@id/publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="公开"
                        android:textColor="@color/bar_color" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin20"
                android:gravity="center">

                <Button
                    android:id="@id/submit"
                    android:layout_width="@dimen/login_bt_width"
                    android:layout_height="@dimen/margin45"
                    android:background="@drawable/login_btn"
                    android:text="@string/submit"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
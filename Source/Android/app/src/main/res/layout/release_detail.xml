<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.kline"
    android:id="@id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/bar_color">

        <Button
            android:id="@id/back"
            android:layout_width="@dimen/margin25"
            android:layout_height="@dimen/margin25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_click" />

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/commentdetail"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@id/loginstate"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/radio_group_height"
            android:layout_alignParentTop="true"
            android:background="@drawable/itemclick"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@id/mylogo"
                android:layout_width="@dimen/margin30"
                android:layout_height="@dimen/margin30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10"
                android:background="@drawable/unknown" />

            <TextView
                android:id="@id/username"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_toRightOf="@id/mylogo"
                android:gravity="center_vertical"
                android:text="@string/nologin"
                android:textColor="@color/bar_color" />

            <ImageView
                android:id="@id/rightgo"
                android:layout_width="@dimen/margin20"
                android:layout_height="@dimen/margin20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin10"
                android:background="@drawable/right_press" />
        </RelativeLayout>

        <LinearLayout
            android:id="@id/detail_head"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginstate"
            android:background="@color/whites"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/radio_group_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/userlogo"
                    android:layout_width="@dimen/margin30"
                    android:layout_height="@dimen/margin30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin10"
                    android:src="@drawable/unknown" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginTop="@dimen/margin5"
                        android:text="nickname"
                        android:textColor="@color/bar_color" />

                    <TextView
                        android:id="@id/release_time"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin10"
                        android:text="2015-02-07 10:00:00"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/small_textsize" />
                </LinearLayout>

                <ImageView
                    android:id="@id/praise"
                    android:layout_width="@dimen/margin25"
                    android:layout_height="@dimen/margin25"
                    android:layout_marginLeft="@dimen/margin10"
                    android:background="@drawable/praise_unpressed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/release_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin10"
                    android:textColor="@color/gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@id/dynamic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/detail_head"
            android:orientation="vertical">

            <com.demo.tabs.TabHost
                android:id="@id/tab_host"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/bar_height"
                app:accentColor="@color/whites" />

            <android.support.v4.view.ViewPager
                android:id="@id/pager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
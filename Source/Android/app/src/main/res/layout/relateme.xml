<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.kline"
    android:id="@id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/bar_color">

        <Button
            android:id="@id/back"
            android:layout_width="@dimen/margin25"
            android:layout_height="@dimen/margin25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_click" />

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="与我相关"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/userinfo_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin100">

        <ImageView
            android:id="@id/userlogo"
            android:layout_width="@dimen/margin40"
            android:layout_height="@dimen/margin40"
            android:layout_centerInParent="true"
            android:src="@drawable/unknown" />

        <TextView
            android:id="@id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userlogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin5"
            android:text="asd"
            android:textColor="@color/ptr_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/margin5"
        android:orientation="vertical">

        <com.demo.tabs.TabHost
            android:id="@id/tab_host"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            app:accentColor="@color/whites" />

        <android.support.v4.view.ViewPager
            android:id="@id/pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/root" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/bar" android:background="@color/bar_color" android:layout_width="fill_parent" android:layout_height="@dimen/bar_height">
        <Button android:id="@id/back" android:background="@drawable/back_click" android:layout_width="@dimen/margin25" android:layout_height="@dimen/margin25" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
        <TextView android:textColor="@color/white" android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="绑定信息" android:layout_centerInParent="true" />
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/dynamic" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="@dimen/radio_group_height" android:layout_marginTop="@dimen/margin30" android:layout_marginBottom="@dimen/margin20">
            <com.demo.view.ClearEditText android:id="@id/email" android:background="@drawable/editshape" android:paddingLeft="@dimen/margin10" android:paddingTop="@dimen/margin5" android:paddingBottom="@dimen/margin5" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/margin25" android:layout_marginRight="@dimen/margin25" android:hint="邮箱账号" android:singleLine="true" android:maxLength="18" />
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="@dimen/radio_group_height" android:layout_marginTop="@dimen/margin30" android:layout_marginBottom="@dimen/margin20">
            <com.demo.view.ClearEditText android:id="@id/phone" android:background="@drawable/editshape" android:paddingLeft="@dimen/margin10" android:paddingTop="@dimen/margin5" android:paddingBottom="@dimen/margin5" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/margin25" android:layout_marginRight="@dimen/margin25" android:hint="手机号码" android:singleLine="true" android:maxLength="11" />
        </RelativeLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="@dimen/radio_group_height" android:layout_marginTop="@dimen/margin30" android:layout_marginBottom="@dimen/margin20">
            <com.demo.view.ClearEditText android:id="@id/code" android:background="@drawable/editshape" android:paddingLeft="@dimen/margin10" android:paddingTop="@dimen/margin5" android:paddingBottom="@dimen/margin5" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/margin25" android:layout_marginRight="@dimen/margin20" android:hint="验证码" android:singleLine="true" android:layout_weight="3.5" />
            <Button android:textColor="@color/white" android:id="@id/code_btn" android:background="@drawable/valide_btn" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_marginRight="@dimen/margin25" android:text="获取验证码" android:layout_weight="3.5" />
        </LinearLayout>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
            <Button android:textColor="@color/white" android:id="@id/submit" android:background="@drawable/login_btn" android:layout_width="@dimen/login_bt_width" android:layout_height="@dimen/radio_group_height" android:text="提交" android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>